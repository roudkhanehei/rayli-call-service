<?xml version="1.0" encoding="utf-8"?>
<layer-list xmlns:android="http://schemas.android.com/apk/res/android">
    <!-- Background -->
    <item>
        <shape android:shape="rectangle">
            <solid android:color="#FFFFFF" />
            <corners android:radius="8dp" />
            <stroke android:width="1dp" android:color="#E0E0E0" />
        </shape>
    </item>
    <!-- Dropdown Arrow -->
    <item android:gravity="end|center_vertical" android:right="12dp">
        <rotate android:fromDegrees="45" android:toDegrees="45">
            <shape android:shape="rectangle">
                <size android:width="2dp" android:height="8dp" />
                <solid android:color="#666666" />
            </shape>
        </rotate>
    </item>
    <item android:gravity="end|center_vertical" android:right="16dp">
        <rotate android:fromDegrees="135" android:toDegrees="135">
            <shape android:shape="rectangle">
                <size android:width="2dp" android:height="8dp" />
                <solid android:color="#666666" />
            </shape>
        </rotate>
    </item>
</layer-list> 